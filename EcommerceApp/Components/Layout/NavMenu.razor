@using EcommerceApp.Services
@using Microsoft.AspNetCore.Components.Authorization
@inject CustomAuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager

<button class="md:hidden fixed top-2 right-4 z-30 w-12 h-10 bg-red-900/30 backdrop-blur-sm border border-orange-500/25 rounded-lg text-orange-200 hover:bg-red-800/40 hover:shadow-lg hover:shadow-orange-600/30 transition-all duration-300 flex items-center justify-center group"
        @onclick="ToggleSidebar">
    <div class="space-y-1.5 transform transition-transform duration-300 @(sidebarOpen ? "rotate-90" : "")">
        <div class="w-6 h-0.5 bg-orange-200 rounded-full"></div>
        <div class="w-6 h-0.5 bg-orange-200 rounded-full"></div>
        <div class="w-6 h-0.5 bg-orange-200 rounded-full"></div>
    </div>
</button>

<div class="@(sidebarOpen ? "block" : "hidden") md:hidden fixed inset-0 bg-black/60 z-20 transition-opacity duration-300"
     @onclick="CloseSidebar"></div>

<div class="@(sidebarOpen ? "translate-x-0" : "-translate-x-full") md:translate-x-0 fixed md:relative inset-y-0 left-0 z-30 w-64 transition-transform duration-300 ease-in-out">
    <div class="h-14 bg-gradient-to-r from-red-950/90 to-orange-900/70 border-b border-orange-600/25 flex items-center justify-center px-4 relative">
        <div class="text-orange-200 font-bold text-lg tracking-wide text-shadow-glow">
            <span class="inline-block w-5 h-5 mr-3 bg-orange-500 rounded-full animate-pulse shadow-lg shadow-orange-500/50"></span>
            Mi Tienda
        </div>
    </div>

    <nav class="flex-1 px-2 py-4 space-y-2 overflow-y-auto h-full">
        <div class="space-y-1">
            <NavLink class="nav-item group" href="" Match="NavLinkMatch.All">
                <div class="flex items-center px-4 py-3 text-orange-200/85 rounded-lg transition-all duration-300 hover:bg-orange-600/20 hover:text-orange-100 hover:-translate-y-0.5 relative overflow-hidden">
                    <div class="absolute inset-0 bg-gradient-to-r from-transparent via-orange-500/15 to-transparent transform -translate-x-full group-hover:translate-x-full transition-transform duration-600"></div>

                    <svg class="w-5 h-5 mr-3 filter drop-shadow-sm" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
                    </svg>

                    <span class="font-medium relative z-10">Inicio</span>
                </div>
            </NavLink>
        </div>

        <div class="mt-6 pt-4 border-t border-orange-600/20">
            <AuthorizeView>
                <Authorized>
                    <div class="space-y-1">
                        <NavLink class="nav-item group" href="profile">
                            <div class="flex items-center px-4 py-3 text-orange-200/85 rounded-lg transition-all duration-300 hover:bg-orange-600/20 hover:text-orange-100 hover:-translate-y-0.5 relative overflow-hidden">
                                <div class="absolute inset-0 bg-gradient-to-r from-transparent via-orange-500/15 to-transparent transform -translate-x-full group-hover:translate-x-full transition-transform duration-600"></div>

                                <svg class="w-5 h-5 mr-3 filter drop-shadow-sm" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                                </svg>

                                <span class="font-medium relative z-10">Perfil</span>
                            </div>
                        </NavLink>

                        <button class="w-full nav-item group" @onclick="Logout">
                            <div class="flex items-center px-4 py-3 text-orange-200/85 rounded-lg transition-all duration-300 hover:bg-red-700/25 hover:text-red-300 hover:-translate-y-0.5 relative overflow-hidden">
                                <div class="absolute inset-0 bg-gradient-to-r from-transparent via-red-600/15 to-transparent transform -translate-x-full group-hover:translate-x-full transition-transform duration-600"></div>

                                <svg class="w-5 h-5 mr-3 filter drop-shadow-sm" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M3 3a1 1 0 00-1 1v12a1 1 0 102 0V4a1 1 0 00-1-1zm10.293 9.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L14.586 9H7a1 1 0 100 2h7.586l-1.293 1.293z" clip-rule="evenodd"/>
                                </svg>

                                <span class="font-medium relative z-10">Cerrar Sesión</span>
                            </div>
                        </button>
                    </div>
                </Authorized>

                <NotAuthorized>
                    <div class="space-y-1">
                        <NavLink class="nav-item group" href="login">
                            <div class="flex items-center px-4 py-3 text-orange-200/85 rounded-lg transition-all duration-300 hover:bg-emerald-700/20 hover:text-emerald-300 hover:-translate-y-0.5 relative overflow-hidden">
                                <div class="absolute inset-0 bg-gradient-to-r from-transparent via-emerald-600/15 to-transparent transform -translate-x-full group-hover:translate-x-full transition-transform duration-600"></div>

                                <svg class="w-5 h-5 mr-3 filter drop-shadow-sm" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M3 3a1 1 0 011 1v12a1 1 0 11-2 0V4a1 1 0 011-1zm7.707 3.293a1 1 0 010 1.414L9.414 9H17a1 1 0 110 2H9.414l1.293 1.293a1 1 0 01-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>

                                <span class="font-medium relative z-10">Iniciar Sesión</span>
                            </div>
                        </NavLink>

                        <NavLink class="nav-item group" href="register">
                            <div class="flex items-center px-4 py-3 text-orange-200/85 rounded-lg transition-all duration-300 hover:bg-amber-700/20 hover:text-amber-300 hover:-translate-y-0.5 relative overflow-hidden">
                                <div class="absolute inset-0 bg-gradient-to-r from-transparent via-amber-600/15 to-transparent transform -translate-x-full group-hover:translate-x-full transition-transform duration-600"></div>

                                <!-- Icono de registro -->
                                <svg class="w-5 h-5 mr-3 filter drop-shadow-sm" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z"/>
                                </svg>

                                <span class="font-medium relative z-10">Registrarse</span>
                            </div>
                        </NavLink>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </nav>
</div>

<style>
    .text-shadow-glow {
        text-shadow: 0 0 15px rgba(234, 88, 12, 0.6);
    }

    nav::-webkit-scrollbar {
        width: 6px;
    }

    nav::-webkit-scrollbar-track {
        background: rgba(127, 29, 29, 0.3);
        border-radius: 10px;
    }

    nav::-webkit-scrollbar-thumb {
        background: rgba(234, 88, 12, 0.6);
        border-radius: 10px;
    }

    nav::-webkit-scrollbar-thumb:hover {
        background: rgba(234, 88, 12, 0.8);
    }

    .nav-item.active div {
        background: linear-gradient(90deg, rgba(234, 88, 12, 0.3) 0%, rgba(185, 28, 28, 0.3) 100%);
        color: #fed7aa;
        box-shadow: 0 0 15px rgba(234, 88, 12, 0.2);
        transform: translateY(-2px);
    }
</style>

@code {
private bool sidebarOpen = false;

private void ToggleSidebar()
{
sidebarOpen = !sidebarOpen;
}

private void CloseSidebar()
{
sidebarOpen = false;
}

private async Task Logout()
{
await AuthStateProvider.MarkUserAsLoggedOut();
NavigationManager.NavigateTo("/login");
sidebarOpen = false;
}
}