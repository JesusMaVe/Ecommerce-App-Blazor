@page "/register"
@using EcommerceApp.Services
@using EcommerceBlazor.Models
@inject AuthService AuthService
@inject NavigationManager NavigationManager

<div class="min-h-screen bg-gradient-to-br  via-red-950 to-orange-950 py-8 px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto">
        <div class="text-center mb-8">
            <h1 class="text-4xl font-bold text-orange-200 mb-2 text-shadow-glow">Crear Cuenta</h1>
            <p class="text-orange-200/70 text-lg">Únete y empieza a comprar</p>
        </div>

        <div class="bg-red-950/40 backdrop-blur-lg shadow-2xl rounded-3xl overflow-hidden border border-orange-600/25">
            <div class="p-8 lg:p-10">
                <EditForm Model="@registerModel" OnValidSubmit="HandleRegister">
                    <DataAnnotationsValidator />
                    
                    <div class="space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div class="space-y-2">
                                <label class="flex items-center text-sm font-semibold text-orange-200/90">
                                    Nombre
                                    <span class="text-red-400 ml-1">*</span>
                                </label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <svg class="h-5 w-5 text-orange-500/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                        </svg>
                                    </div>
                                    <InputText class="w-full pl-10 pr-4 py-3 border border-orange-600/30 rounded-xl focus:ring-2 focus:ring-orange-500/50 focus:border-orange-500/80 transition-all duration-200 bg-red-950/30 focus:bg-red-950/50 text-white placeholder-orange-200/50 backdrop-blur-sm" 
                                              @bind-Value="registerModel.FirstName" 
                                              placeholder="Ingresa tu nombre" />
                                </div>
                                <ValidationMessage For="@(() => registerModel.FirstName)" class="text-red-400 text-sm mt-1 flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                                    </svg>
                                </ValidationMessage>
                            </div>

                            <div class="space-y-2">
                                <label class="flex items-center text-sm font-semibold text-orange-200/90">
                                    Apellido
                                    <span class="text-red-400 ml-1">*</span>
                                </label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <svg class="h-5 w-5 text-orange-500/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                        </svg>
                                    </div>
                                    <InputText class="w-full pl-10 pr-4 py-3 border border-orange-600/30 rounded-xl focus:ring-2 focus:ring-orange-500/50 focus:border-orange-500/80 transition-all duration-200 bg-red-950/30 focus:bg-red-950/50 text-white placeholder-orange-200/50 backdrop-blur-sm" 
                                              @bind-Value="registerModel.LastName" 
                                              placeholder="Ingresa tu apellido" />
                                </div>
                                <ValidationMessage For="@(() => registerModel.LastName)" class="text-red-400 text-sm mt-1 flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                                    </svg>
                                </ValidationMessage>
                            </div>
                        </div>

                        <div class="space-y-2">
                            <label class="flex items-center text-sm font-semibold text-orange-200/90">
                                Correo Electrónico
                                <span class="text-red-400 ml-1">*</span>
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <svg class="h-5 w-5 text-orange-500/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                                    </svg>
                                </div>
                                <InputText class="w-full pl-10 pr-4 py-3 border border-orange-600/30 rounded-xl focus:ring-2 focus:ring-orange-500/50 focus:border-orange-500/80 transition-all duration-200 bg-red-950/30 focus:bg-red-950/50 text-white placeholder-orange-200/50 backdrop-blur-sm" 
                                          @bind-Value="registerModel.Email" 
                                          placeholder="ejemplo@correo.com" />
                            </div>
                            <ValidationMessage For="@(() => registerModel.Email)" class="text-red-400 text-sm mt-1 flex items-center">
                                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                                </svg>
                            </ValidationMessage>
                        </div>

                        <div class="space-y-2">
                            <label class="flex items-center text-sm font-semibold text-orange-200/90">
                                Contraseña
                                <span class="text-red-400 ml-1">*</span>
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <svg class="h-5 w-5 text-orange-500/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                    </svg>
                                </div>
                                <InputText type="password" 
                                          class="w-full pl-10 pr-4 py-3 border border-orange-600/30 rounded-xl focus:ring-2 focus:ring-orange-500/50 focus:border-orange-500/80 transition-all duration-200 bg-red-950/30 focus:bg-red-950/50 text-white placeholder-orange-200/50 backdrop-blur-sm" 
                                          @bind-Value="registerModel.Password" 
                                          placeholder="Mínimo 8 caracteres" />
                            </div>
                            <p class="text-xs text-orange-200/60 mt-1">La contraseña debe tener al menos 8 caracteres</p>
                            <ValidationMessage For="@(() => registerModel.Password)" class="text-red-400 text-sm mt-1 flex items-center">
                                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                                </svg>
                            </ValidationMessage>
                        </div>

                        <div class="relative">
                            <div class="absolute inset-0 flex items-center">
                                <div class="w-full border-t border-orange-600/20"></div>
                            </div>
                            <div class="relative flex justify-center text-sm">
                                <span class="px-4 bg-red-950/40 text-orange-200/70 font-medium">Información adicional (opcional)</span>
                            </div>
                        </div>

                        <div class="space-y-2">
                            <label class="block text-sm font-semibold text-orange-200/90">Teléfono</label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <svg class="h-5 w-5 text-orange-500/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                    </svg>
                                </div>
                                <InputText class="w-full pl-10 pr-4 py-3 border border-orange-600/30 rounded-xl focus:ring-2 focus:ring-orange-500/50 focus:border-orange-500/80 transition-all duration-200 bg-red-950/30 focus:bg-red-950/50 text-white placeholder-orange-200/50 backdrop-blur-sm" 
                                          @bind-Value="registerModel.PhoneNumber" 
                                          placeholder="+52 123 456 7890" />
                            </div>
                            <ValidationMessage For="@(() => registerModel.PhoneNumber)" class="text-red-400 text-sm mt-1" />
                        </div>

                        <div class="space-y-2">
                            <label class="block text-sm font-semibold text-orange-200/90">Dirección</label>
                            <div class="relative">
                                <div class="absolute top-3 left-3 pointer-events-none">
                                    <svg class="h-5 w-5 text-orange-500/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                </div>
                                <InputTextArea class="w-full pl-10 pr-4 py-3 border border-orange-600/30 rounded-xl focus:ring-2 focus:ring-orange-500/50 focus:border-orange-500/80 transition-all duration-200 bg-red-950/30 focus:bg-red-950/50 text-white placeholder-orange-200/50 resize-none backdrop-blur-sm" 
                                              @bind-Value="registerModel.Address" 
                                              rows="3"
                                              placeholder="Calle, ciudad, código postal..." />
                            </div>
                            <ValidationMessage For="@(() => registerModel.Address)" class="text-red-400 text-sm mt-1" />
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="bg-red-800/25 border border-red-600/50 text-white rounded-xl p-4 backdrop-blur-sm">
                                <div class="flex items-start">
                                    <svg class="h-5 w-5 text-red-400 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    <div>
                                        <h3 class="font-semibold mb-1 text-red-300">Error en el registro</h3>
                                        <div class="text-sm whitespace-pre-line text-red-200">@errorMessage</div>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="pt-4">
                            <button type="submit" 
                                    class="w-full bg-gradient-to-r from-red-700 to-orange-600 hover:from-red-600 hover:to-orange-500 text-white font-bold py-4 px-6 rounded-xl transition-all duration-200 transform hover:scale-105 focus:outline-none focus:ring-4 focus:ring-orange-500/30 shadow-xl shadow-red-700/40 hover:shadow-2xl hover:shadow-red-600/50">
                                <span class="flex items-center justify-center">
                                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                                    </svg>
                                    Crear mi cuenta
                                </span>
                            </button>
                        </div>

                        <div class="text-center pt-6 border-t border-orange-600/20">
                            <p class="text-orange-200/70">
                                ¿Ya tienes una cuenta? 
                                <a href="/login" class="font-semibold text-orange-400 hover:text-orange-300 transition-colors duration-200">
                                    Iniciar sesión
                                </a>
                            </p>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

<style>
    .text-shadow-glow {
        text-shadow: 0 0 15px rgba(234, 88, 12, 0.6);
    }
</style>

@code {
    private CreateUserDto registerModel = new();
    private string errorMessage = string.Empty;

    private async Task HandleRegister()
    {
        var response = await AuthService.RegisterAsync(registerModel);
        if (response.Success)
        {
            NavigationManager.NavigateTo("/login");
        }
        else
        {
            errorMessage = response.Message;
            foreach (var error in response.Errors)
            {
                errorMessage += $"\n{error}";
            }
        }
    }
}