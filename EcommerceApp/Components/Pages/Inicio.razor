@page "/"
@inject NavigationManager NavigationManager

<div class="min-h-screen bg-gradient-to-br from-gray-900 via-red-950 to-orange-950">
    <section class="relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-red-950/50 via-orange-900/30 to-red-900/40"></div>
        
        <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 lg:py-32">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                <div class="text-center lg:text-left">
                    <h1 class="text-5xl lg:text-7xl font-bold text-orange-200 mb-6 leading-tight text-shadow-glow">
                        Descubre lo
                        <span class="bg-gradient-to-r from-orange-400 to-red-400 bg-clip-text text-transparent">
                            Extraordinario
                        </span>
                    </h1>
                    <p class="text-xl lg:text-2xl text-orange-200/80 mb-8 leading-relaxed">
                        Los mejores productos, las mejores ofertas, la mejor experiencia de compra online.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
                        <button
                                class="bg-gradient-to-r from-red-700 to-orange-600 hover:from-red-600 hover:to-orange-500 text-white font-bold py-4 px-8 rounded-full transition-all duration-300 transform hover:scale-105 shadow-2xl shadow-red-700/40">
                            <span class="flex items-center justify-center">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                                </svg>
                                Explorar Productos
                            </span>
                        </button>
                        <button class="border-2 border-orange-400 text-orange-200 hover:bg-orange-400 hover:text-red-950 font-bold py-4 px-8 rounded-full transition-all duration-300">
                            Ver Ofertas
                        </button>
                    </div>
                </div>

                <div class="relative">
                    <div class="w-full max-w-lg mx-auto">
                        <div class="relative h-96">
                            <div class="absolute top-0 left-0 w-32 h-40 bg-red-950/60 backdrop-blur-sm border border-orange-600/30 rounded-2xl shadow-xl transform rotate-12 hover:rotate-6 transition-transform duration-300">
                                <div class="p-4">
                                    <div class="w-full h-20 bg-gradient-to-br from-orange-500 to-red-600 rounded-lg mb-2"></div>
                                    <div class="h-2 bg-orange-300/30 rounded mb-1"></div>
                                    <div class="h-2 bg-orange-300/30 rounded w-3/4"></div>
                                </div>
                            </div>
                            <div class="absolute top-8 right-0 w-32 h-40 bg-red-950/60 backdrop-blur-sm border border-orange-600/30 rounded-2xl shadow-xl transform -rotate-12 hover:rotate-6 transition-transform duration-300">
                                <div class="p-4">
                                    <div class="w-full h-20 bg-gradient-to-br from-red-600 to-orange-700 rounded-lg mb-2"></div>
                                    <div class="h-2 bg-orange-300/30 rounded mb-1"></div>
                                    <div class="h-2 bg-orange-300/30 rounded w-2/3"></div>
                                </div>
                            </div>
                            <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-36 h-44 bg-red-950/60 backdrop-blur-sm border border-orange-600/30 rounded-2xl shadow-2xl hover:scale-105 transition-transform duration-300">
                                <div class="p-4">
                                    <div class="w-full h-24 bg-gradient-to-br from-orange-600 to-red-700 rounded-lg mb-2"></div>
                                    <div class="h-2 bg-orange-300/30 rounded mb-1"></div>
                                    <div class="h-2 bg-orange-300/30 rounded w-4/5"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="absolute bottom-0 left-0 right-0">
            <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M0,64L48,74.7C96,85,192,107,288,112C384,117,480,107,576,90.7C672,75,768,53,864,48C960,43,1056,53,1152,64C1248,75,1344,85,1392,90.7L1440,96L1440,120L1392,120C1344,120,1248,120,1152,120C1056,120,960,120,864,120C768,120,672,120,576,120C480,120,384,120,288,120C192,120,96,120,48,120L0,120Z" fill="rgb(127, 29, 29)"/>
            </svg>
        </div>
    </section>

    <section class="py-20 bg-red-950">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-4xl font-bold text-orange-200 mb-4">¿Por qué elegirnos?</h2>
                <p class="text-xl text-orange-200/70 max-w-3xl mx-auto">Ofrecemos la mejor experiencia de compra con beneficios únicos</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                <div class="text-center group">
                    <div class="w-20 h-20 bg-gradient-to-br from-red-700 to-orange-600 rounded-2xl mx-auto mb-6 flex items-center justify-center group-hover:scale-110 transition-transform duration-300 shadow-lg shadow-red-700/40">
                        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-orange-200 mb-3">Envío Gratis</h3>
                    <p class="text-orange-200/70">En compras superiores a $500 pesos</p>
                </div>

                <div class="text-center group">
                    <div class="w-20 h-20 bg-gradient-to-br from-orange-600 to-red-700 rounded-2xl mx-auto mb-6 flex items-center justify-center group-hover:scale-110 transition-transform duration-300 shadow-lg shadow-orange-600/40">
                        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-orange-200 mb-3">Compra Segura</h3>
                    <p class="text-orange-200/70">Protección garantizada en todas tus compras</p>
                </div>

                <div class="text-center group">
                    <div class="w-20 h-20 bg-gradient-to-br from-red-600 to-orange-700 rounded-2xl mx-auto mb-6 flex items-center justify-center group-hover:scale-110 transition-transform duration-300 shadow-lg shadow-red-600/40">
                        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-orange-200 mb-3">Entrega Rápida</h3>
                    <p class="text-orange-200/70">Recibe tus productos en 24-48 horas</p>
                </div>

                <div class="text-center group">
                    <div class="w-20 h-20 bg-gradient-to-br from-orange-700 to-red-600 rounded-2xl mx-auto mb-6 flex items-center justify-center group-hover:scale-110 transition-transform duration-300 shadow-lg shadow-orange-700/40">
                        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-orange-200 mb-3">Soporte 24/7</h3>
                    <p class="text-orange-200/70">Atención al cliente siempre disponible</p>
                </div>
            </div>
        </div>
    </section>

    <section class="py-20 bg-gradient-to-br from-red-900 to-orange-900">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-4xl font-bold text-orange-200 mb-4">Productos Destacados</h2>
                <p class="text-xl text-orange-200/70">Los más vendidos de esta semana</p>
            </div>

            @if (featuredProducts != null && featuredProducts.Any())
            {
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                    @foreach (var product in featuredProducts.Take(4))
                    {
                        <div class="bg-red-950/60 backdrop-blur-sm border border-orange-600/30 rounded-2xl shadow-lg overflow-hidden group hover:shadow-2xl hover:shadow-red-700/30 transition-all duration-300 transform hover:-translate-y-2">
                            <div class="relative overflow-hidden">
                                <div class="w-full h-64 bg-gradient-to-br from-red-800/50 to-orange-800/50 flex items-center justify-center">
                                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                                    {
                                        <img src="@product.ImageUrl" alt="@product.Name" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300" />
                                    }
                                    else
                                    {
                                        <svg class="w-16 h-16 text-orange-400/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                                        </svg>
                                    }
                                </div>
                                <div class="absolute top-4 right-4">
                                    <span class="bg-red-600 text-white px-3 py-1 rounded-full text-sm font-semibold">
                                        -@(new Random().Next(10, 50))%
                                    </span>
                                </div>
                            </div>
                            <div class="p-6">
                                <h3 class="text-lg font-semibold text-orange-200 mb-2 line-clamp-2">@product.Name</h3>
                                <p class="text-orange-200/70 text-sm mb-4 line-clamp-2">@product.Description</p>
                                <div class="flex items-center justify-between">
                                    <div class="flex flex-col">
                                        <span class="text-2xl font-bold text-orange-400">$@product.Price.ToString("N0")</span>
                                        <span class="text-sm text-orange-200/50 line-through">$@((product.Price * 1.3m).ToString("N0"))</span>
                                    </div>
                                    <button @onclick="() => AddToCart(product)" 
                                            class="bg-gradient-to-r from-red-700 to-orange-600 hover:from-red-600 hover:to-orange-500 text-white p-3 rounded-full transition-all duration-300 transform hover:scale-110 shadow-lg shadow-red-700/40">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                    @for (int i = 0; i < 4; i++)
                    {
                        <div class="bg-red-950/60 backdrop-blur-sm border border-orange-600/30 rounded-2xl shadow-lg overflow-hidden animate-pulse">
                            <div class="w-full h-64 bg-red-800/30"></div>
                            <div class="p-6">
                                <div class="h-4 bg-orange-300/20 rounded mb-2"></div>
                                <div class="h-3 bg-orange-300/20 rounded mb-4 w-3/4"></div>
                                <div class="flex items-center justify-between">
                                    <div class="h-6 bg-orange-300/20 rounded w-20"></div>
                                    <div class="w-12 h-12 bg-orange-300/20 rounded-full"></div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }

            <div class="text-center mt-12">
                <button
                        class="bg-gradient-to-r from-red-700 to-orange-600 hover:from-red-600 hover:to-orange-500 text-white font-bold py-4 px-8 rounded-full transition-all duration-300 transform hover:scale-105 shadow-lg shadow-red-700/40">
                    Ver Todos los Productos
                </button>
            </div>
        </div>
    </section>

    <section class="py-20 bg-gradient-to-r from-red-800 to-orange-700">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h2 class="text-4xl font-bold text-white mb-4">¡No te pierdas nuestras ofertas!</h2>
            <p class="text-xl text-orange-100 mb-8">Suscríbete y recibe descuentos exclusivos</p>
            
            <div class="max-w-md mx-auto">
                <div class="flex flex-col sm:flex-row gap-4">
                    <input type="email" 
                           placeholder="Tu correo electrónico" 
                           class="flex-1 px-6 py-4 rounded-full bg-red-950/30 border border-orange-600/30 text-white placeholder-orange-200/50 focus:outline-none focus:ring-4 focus:ring-orange-500/30 focus:border-orange-500/80 backdrop-blur-sm">
                    <button class="bg-white text-red-700 font-bold py-4 px-8 rounded-full hover:bg-orange-100 transition-all duration-300 transform hover:scale-105 shadow-lg">
                        Suscribirse
                    </button>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
    .text-shadow-glow {
        text-shadow: 0 0 20px rgba(234, 88, 12, 0.8);
    }
    
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>

@code {
    private List<ProductDto>? featuredProducts;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await Task.Delay(1000); 
            
            featuredProducts = new List<ProductDto>
            {
                new ProductDto { Id = 1, Name = "Smartphone Premium", Description = "Último modelo con cámara de alta resolución", Price = 15000, ImageUrl = "" },
                new ProductDto { Id = 2, Name = "Laptop Gaming", Description = "Potente laptop para gaming y trabajo", Price = 25000, ImageUrl = "" },
                new ProductDto { Id = 3, Name = "Auriculares Bluetooth", Description = "Sonido cristalino y cancelación de ruido", Price = 3500, ImageUrl = "" },
                new ProductDto { Id = 4, Name = "Smartwatch", Description = "Monitor de salud y fitness avanzado", Price = 8000, ImageUrl = "" }
            };
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading products: {ex.Message}");
            featuredProducts = new List<ProductDto>();
        }
    }

    private async Task AddToCart(ProductDto product)
    {

        await Task.CompletedTask;
    }

    public class ProductDto
    {
        public int Id { get; set; }
        public string Name { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public decimal Price { get; set; }
        public string ImageUrl { get; set; } = string.Empty;
    }
}